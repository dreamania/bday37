<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">일자별 이벤트 진행 통계</div>
    </div>
    <div class="row-fluid block-content collapse in">
      <div class="span4">
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>날짜</th>
              <th>PC트래픽</th>
              <th>모바일트래픽</th>
            </tr>
          </thead>
          <tbody>
            <% @traffic_stats.each do |traffic_stat| %>
              <tr class="">
                <td>
                  <%= traffic_stat.created_date %>
                </td>
                <td>
                  <%= traffic_stat.pc_count %>
                </td>
                <td>
                  <%= traffic_stat.mobile_count %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="span2">
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>날짜</th>
              <th>바이럴수</th>
            </tr>
          </thead>
          <tbody>
            <% @viral_stats.each do |viral_stat| %>
              <tr class="">
                <td>
                  <%= viral_stat.created_date %>
                </td>
                <td>
                  <%= viral_stat.viral_count %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="span5">
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>날짜</th>
              <th>PC참여자수</th>
              <th>모바일참여자수</th>
              <th>쿠폰사용자수</th>
            </tr>
          </thead>
          <tbody>
            <% @user_stats.each do |user_stat| %>
              <tr class="">
                <td>
                  <%= user_stat.created_date %>
                </td>
                <td>
                  <%= user_stat.pc_count %>
                </td>
                <td>
                  <%= user_stat.mobile_count %>
                </td>
                <td>
                  <%= user_stat.coupon_user_count %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- /block -->
</div>
