<div class="contain">
	<div class="header"> <!-- Header -->
		<%= image_tag("pc/logo.png", class: "header_logo") %>
		<%= image_tag("pc/term.png", class: "header_term") %>
	</div>
	<div class="content"> <!-- Content -->
		<div class="c_title">
			<%= image_tag("pc/title.png", class: "content_title") %>
		</div>
		<div class="btn_event">
			<%= link_to "#", id: "gift_button" do %>
			<%= image_tag "pc/button.png" %>
			<% end %>
		</div>
		<div class="label_2">
			<%= image_tag "pc/label_2.png" %>
		</div>
		<div class="share">
			<a href="https://twitter.com/intent/tweet?original_referer=http%3A%2F%2Fbit.ly%2Fsu-m37-tw&related=su_m37&text=%EC%99%84%EC%A0%84%20%EB%93%9D%ED%85%9C%20%EC%86%8C%EC%8B%9D~%0A%ED%94%BC%EB%B6%80%EC%83%9D%EC%9D%BC%3F!%20%0A%EC%97%90%EC%84%BC%EC%8A%A4%20%EC%84%A0%EB%AC%BC%EA%B9%8C%EC%A7%80%20%EC%A4%80%EB%8B%A4%EA%B3%A0!%3F%0A%0Ahttp%3A%2F%2Fbit.ly%2Fsu-m37-tw%0A%0A%EC%88%A837%EA%B3%BC%20%EC%B2%98%EC%9D%8C%EB%A7%8C%EB%82%98%EB%8A%94%20%EC%88%9C%EA%B0%84%2C%0A%ED%94%BC%EB%B6%80%20%EC%83%9D%EC%9D%BC%EC%9D%B4%20%EC%8B%9C%EC%9E%91%EB%90%A9%EB%8B%88%EB%8B%A4.%0A%0AMake%20your%20skin%20birthday%20%0ASponsored%20by%20%EC%88%A837" onclick="twitter_share()">
				<%= image_tag("pc/share_twitter.png", class: "share_icon_t") %>
			</a>
			<a href="#" id="facebook_share_link">
				<%= image_tag("pc/share_facebook.png", class: "share_icon_f") %>
			</a>
              
		</div>
	</div>
	<div class="video"> <!-- Video -->
		<div class="video_labelarea">
			<%= image_tag("pc/vedio_label.png", class: "video_label") %>
			<%= link_to "#popup_product", {id: "product_button"} do %>
			<%= image_tag("pc/vedio_button.png", class: "video_button") %>
			<% end %>
		</div>
		<iframe class="youtube_iframe" width="640" height="390" src="//www.youtube.com/embed/bax4BgeYnGI?wmode=opaque" frameborder="0" allowfullscreen></iframe>
	</div>
	<!-- popup -->
	<div id="popup_info">
		<div>
			<%= link_to "#", class: "b-close" do %>
			<%= image_tag("pc/popup/close.png", class: "close") %>
			<% end %>
		</div>
		<%= form_for([:pc, @user], remote: true, html: {'data-type'=>'json'}) do |f| %>
		<div class="info_birth">
			<div class="info_birth_date">
				<%= select_tag "user[birthday_month]", 
					options_for_select(months_option_helper, Time.now.month), 
					{class: 'select_custom_2', id: "select_month"} %>
				<%= image_tag("pc/popup/info/birth_label_2.png", class:"birth_label_class") %>
				<%= select_tag("user[birthday_day]", 
					options_for_select(days_option_helper, Time.now.day),
					{name:'user[birthday_day]', class: 'select_custom_2', id: "select_day"}) %>
				<%= image_tag("pc/popup/info/birth_label_3.png", class:"birth_label_class") %>
			</div>
			<div class="info_birth_date_empty"></div>
		</div>  
		<div class="info_other">
			<div> <%= image_tag("pc/popup/info/info_label_1.png", class:"info_input_label_1") %>
				<input type='text' data-name='name' id='info_name' name='user[name]' class="info_input_name" value="" maxlength="4" />
			</div>
			<div> <%= image_tag("pc/popup/info/info_label_2.png", class:"info_input_label_2") %>
				<input type='text' data-name='phone' id='info_phone' name='user[phone]' class="info_input_call" value="" maxlength="13" />
			</div>
			<div class="check_box">
				<%= image_tag("pc/popup/info/info_label_3.png", class:"info_input_label_3") %>
				<%= f.check_box "agree", {"data-name" => "agree", id:"info_input_radio", class:"info_input_radio" }%>
				
			</div>
			<div class="check_box second">
				<%= image_tag("pc/popup/info/info_label_4.png", class:"info_input_label_4") %>
				<%= f.check_box "agree2", {"data-name" => "agree2", id:"info_input_radio2", class:"info_input_radio" }%>
			</div>
			<%= link_to "#", class:"popup_info_to_personal", id: "popup_info_to_personal" do %>
				<%= image_tag("pc/popup/info/info_personal_button.png", class: "to_personal") %>
				<% end %>
		</div>
		<%= image_submit_tag("pc/popup/info/button.png",{id: "info_fin"}) %>
		<%end%>
	</div>
</div>
<div class="footer_custom"> <!-- Caution -->
	<%= image_tag "pc/caution.png" %>
</div>
<%= render "popup_personal"%>
<%= render "popup_fin1" %>
<%= render "popup_fin2" %>
<%= render "popup_product" %>